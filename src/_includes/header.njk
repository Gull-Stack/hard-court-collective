<header class="header">
  <div class="container">
    <nav class="nav">
      <!-- Logo (text-based) -->
      <a href="{{ '/' | url }}" class="logo">
        <span class="logo-text">{{ site.name }}</span>
      </a>
      
      <!-- Mobile hamburger menu -->
      <button class="mobile-toggle" aria-label="Toggle menu" aria-expanded="false">
        <span></span>
        <span></span>
        <span></span>
      </button>
      
      <!-- Navigation links -->
      <ul class="nav-links">
        {% for item in site.nav %}
        <li><a href="{{ item.url | url }}">{{ item.label }}</a></li>
        {% endfor %}
        
        <!-- Phone CTA -->
        <li><a href="tel:{{ site.phone }}" class="nav-phone">{{ site.phone }}</a></li>
        
        <!-- Primary CTA button -->
        <li><a href="{{ site.cta.url | url }}" class="btn btn-primary">{{ site.cta.text }}</a></li>
      </ul>
    </nav>
  </div>
</header>